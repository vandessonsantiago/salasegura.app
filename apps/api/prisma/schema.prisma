generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User profile model - sincronizado com auth.users do Supabase
model User {
  id         String   @id // UUID do Supabase Auth
  email      String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  // Campos de perfil customizados
  name       String?
  avatar_url String?
  
  @@map("users")
}

// Exemplo de modelo relacionado ao usu√°rio
model UserProfile {
  id      String  @id @default(uuid())
  user_id String  @unique
  bio     String?
  phone   String?
  
  // Relacionamento com auth.users do Supabase
  // user    User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  @@map("user_profiles")
}
